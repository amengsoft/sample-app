{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "/types", 
      "/node_modules/@overwolf/types"
    ],
    "rootDirs": [
      "./src"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ]
}